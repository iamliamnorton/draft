<div class="col-md-12">
  <h1>Lobby</h1>

  <div class="container">
    <div class="row">
      <h3>
        Welcome <%= current_user.email %>
      </h3>
      <p>
        There are <%= @rounds.count %> rounds open now
      <p>
      <p>
        Next round closes in
        <% if @rounds.minimum(:closed_at).present? %>
          <%= distance_of_time_in_words(Time.now, @rounds.minimum(:closed_at)) %>
        <% end %>
      <p>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-body">
          <%= link_to 'Create contest',
            new_contest_path,
            class: 'btn btn-success' %>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Seasons</h3>
          </div>
          <div class="panel-body">
            <%= render partial: "seasons",
              locals: { seasons: @seasons } %>
          </div>
        </div>
      </div>
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Contests</h3>
          </div>
          <div class="panel-body">
            <%= render partial: "contests",
              locals: { contests: @contests } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
