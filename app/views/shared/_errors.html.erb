<% if target.errors.any? %>
  <div class="alert alert-danger alert-dismissible" role="alert-danger">
    <button type="button" class="close" data-dismiss="alert-danger" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <strong>
      <%= pluralize(target.errors.count, "error") %> prohibited this
      <%= target.class.name %> from being saved:
    </strong>
    <ul>
      <% target.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
